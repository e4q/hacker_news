{application, hacker_news, [
{description, "Erlang Hacker News Aggregator"},
    {vsn, semver},
    {registered, []},
    {mod, {hacker_news_app, []}},
    {applications, [
        kernel,
        stdlib,
        inets,
        ssl
    ]},
    {env,[
        {topstories_url, "https://hacker-news.firebaseio.com/v0/topstories.json?print=pretty"},
        {topstories_total, 50},
        {topstories_interval, 300000},
        {topstories_retry, 10}
    ]},
    {modules, []},
    {licenses, ["MIT"]},
    {links, [{"Github", "https://github.com/vkatsuba/hacker_news"}]}
 ]}.
